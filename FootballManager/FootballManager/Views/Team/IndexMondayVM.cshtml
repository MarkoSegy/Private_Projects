@model IEnumerable<FootballManager.Models.ViewModels.TeamMondayVM>

@{
    ViewData["Title"] = "IndexMondayVM";
}

<h1>IndexMondayVM</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.team.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.team.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.team.ImagePath)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.isMonday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.team.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.team.Name)
            </td>
            <td>
                <img class="rounded-circle" src="@item.team.ImagePath" alt="@item.team.Name" style="width: 150px" height="150px" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.isMonday)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.team.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                <a class="btn btn-outline-info" asp-action="DetailsTeamMonday" asp-route-id="@item.team.Id"><i class="bi bi-eye"></i>Details </a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.team.Id"><i class="bi bi-trash"></i>Delete </a>
            </td>
            
        </tr>
}
    </tbody>
</table>
